
::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background hsla(0,0,0,0)

::-webkit-scrollbar-thumb
  background hsla(185,50,70,0.7)
  border-radius 2px

::-webkit-scrollbar-corner
  background hsla(0,0,0,0)

html
  background hsl(0,0,96)
  position absolute
  width 100%
  height 100%

body
  margin 0px auto
  width 1060px
  background white
  height 100%
  display block
  font-family Marcellus, 'wenquanyi micro hei'
  box-shadow 0px 0px 12px hsl(0,0,70)
  background hsl(0,0,97)
  position relative

*
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box

code, input, textarea
  font-size 14px
  border none
  font-family Monaco, 'Oxygen Mono', monospace, 'wenquanyi micro hei'
  outline none

textarea
  -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
  -moz-box-sizing: border-box;    /* Firefox, other Gecko */
  box-sizing: border-box;         /* Opera/IE 8+ */

#intro
  padding 60px 20px

  .name
    font-size 30px
    line-height 50px
    text-shadow 0px 0px 4px hsl(0,0,80)

  .author
    font-size 15px
    color hsl(0,0,70)
    margin-left 60px

  #hide
    margin-top 100px
    font-size 15px
    cursor pointer
    color white
    // text-shadow 0px 0px 6px hsl(0,0,50)
    background hsl(200,90,76)
    display inline-block
    padding 6px 8px
    border-radius 12px

#text
  position absolute
  top 20px
  right 20px
  height 90%
  resize none
  box-shadow 0px 0px 4px hsl(0,0,80)
  padding 100px 14px 400px
  // -webkit-transition opacity 0.4s
  width 70%
  overflow-x auto
  white-space nowrap
  opacity 0
  -webkit-animation-name blink_out
  -webkit-animation-duration 0.3s
  -webkit-animation-timing-function ease
  -webkit-animation-iteration-count 1
  color white
  background white

  &:hover
    opacity 1
    color hsl(0,0,0)
    background hsl(0,0,100)
    -webkit-animation-name blink_in

@keyframes blink_in
  from
    color white
    background white
    opacity 0
  50%
    color white
    background white
    opacity 1
  to
    color hsl(0,0,0)
    background hsl(0,0,100)
    opacity 1

@keyframes blink_out
  from
    color hsl(0,0,0)
    background hsl(0,0,100)
    opacity 1
  50%
    color white
    background white
    opacity 1
  to
    color white
    background white
    opacity 0

#view
  position absolute
  top 20px
  right 20px
  width 70%
  height 90%
  box-shadow 0px 0px 4px hsl(0,0,80)
  padding 100px 14px 400px
  overflow-y scroll
  overflow-x auto
  background hsl(0,0,99)

  pre
    box-shadow 0px 0px 4px hsl(0,0,80)
    padding 7px 14px

ol, ul, blockquote
  max-width 640px
  margin-left 20px

blockquote
  margin 0px
  padding 0px 0px 0px 10px
  border none
  background hsl(0,0,96)
  box-shadow 0px 0px 3px hsl(0,0,70)

  p
    max-width 640px

p
  max-width 640px
  code 
    box-shadow 0px 0px 4px hsl(0,0,80)
    padding 0px 4px

a
  text-decoration none
  text-shadow 0px 0px 2px hsl(0,30,70)

img
  max-width 400px

#caret
  // box-shadow 0px 0px 3px hsl(0,0,0)
  margin 0px -1px
  background hsla(40,50,40,0.5)
  display block

  &:empty
    min-height 14px
    width 2px
    display inline-block