*
  box-sizing border-box

body
  margin 0px
  font-family 'wenquanyi micro hei'

#wrap
  width 960px
  margin 0px auto
  padding 00px 0px 400px
  color hsl(0,0,10)

#logo
  background hsla(240,70,90,0.8)
  margin 20px 0px

.pair
  box-shadow 0px 0px 4px gray
  display -webkit-box
  -webkit-box-orient horizontal
  margin 20px 0px

  .cirru-editor
    width 70%
    background
  .result
    width 30%
    font-size 15px
    background hsl(0,80,80)
    color white
    font-family monospace
    padding 10px
    overflow auto

.title
  font-size 30px
  margin 30px 0px
  font-family Sans
  text-align center
  text-transform capitalize

p
  font-size 19px
  margin 0px
  line-height 36px
  word-spacing 0.4em

  a
    text-decoration none
    margin 0px 4px
    padding 0px 4px

  code
    margin 0px 4px
    padding 0px 4px
    background hsl(0,0,90)  