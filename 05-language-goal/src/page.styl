
body
  margin 0px
  font-size 20px

@font-face
  font-family "montserrat"
  src url("../fonts/montserrat.woff") format("woff")

*
  box-sizing border-box

body
  background hsl(0,0,98)
  font-family "montserrat", "wenquanyi micro hei"
  width 1300px

#wrap
  margin 0px auto
  width 1000px
  box-shadow 0px 0px 2px hsl(0,0,70)
  padding 20px 40px 200px
  text-align center

  .title
    font-size 30px
    margin 40px 0px

  a
    color hsl(240,30,40)
    text-decoration none

  img
    max-width 800px
    margin 20px auto
    box-shadow 0px 0px 20px hsl(20,20,40)

#disqus_thread
  margin 200px 0px 0px