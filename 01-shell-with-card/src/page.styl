
body
  margin 0px
  background hsl(120,30,90)
  font-family "Helvetica Neue", Helvetica, Arial,
    sans-serif, 'wenquanyi micro hei'

#wrap
  width 800px
  padding 20px
  padding-bottom 100px
  background hsl(0,0,98)
  margin 0px auto

.title
  font-size 20px
  font-family Kinnari

#inside
  padding 40px 20px
  &>p
    margin 16px 0px

a
  text-decoration none
  color blue
  margin 0px 4px

p
  margin 0px

code
  background hsl(0,0,40)
  color white
  padding 4px 3px 1px
  margin 0px 3px
  border-radius 3px

.term
  width 100%
  height 300px
  padding 4px 2px
  background hsl(300,90,20)
  font-size 13px
  color white
  font-family monospace
  font-weight bold

  .indentation
    padding-left 60px

.color-dir
  color hsl(240,90,76)
.color-exec
  color hsl(60,90,60)
.color-undefined
  color hsl(0,100,45)
.color-string
  color hsl(60,60,50)

@-webkit-keyframes blink
  0%
    opacity 1
  49%
    opacity 1
  50%
    opacity 0
  99%
    opacity 0
.blink
  -webkit-animation blink 1.4s infinite

#term-2
  height 200px

.codes
  background hsl(300,90,20)
  padding 4px
  color white
  font-size 13px
  font-family monospace