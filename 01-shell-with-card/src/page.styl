
body
  margin 0px
  background hsl(120,30,90)
  font-family "Helvetica Neue", Helvetica, Arial,
    sans-serif, 'wenquanyi micro hei'

::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background hsl(0,90,95)

::-webkit-scrollbar-thumb
  background hsl(0,50,80)
  border-radius 2px

#wrap
  width 800px
  padding 20px
  padding-bottom 200px
  background hsl(0,0,98)
  margin 0px auto

.title
  font-size 20px
  font-family Kinnari

#inside
  padding 40px 20px
  &>p
    margin 16px 0px

a
  text-decoration none
  color blue
  margin 0px 4px

p
  margin 0px

code
  background hsl(0,0,40)
  color white
  padding 4px 3px 1px
  margin 0px 3px
  border-radius 3px

.term
  width 100%
  height 300px
  padding 4px 2px
  background hsl(300,90,20)
  font-size 13px
  color white
  font-family monospace
  font-weight bold
  line-height 18px

  .indentation
    padding-left 60px

.color-dir
  color hsl(240,90,76)
.color-exec
  color hsl(60,90,60)
.color-undefined
  color hsl(0,100,45)
.color-string
  color hsl(60,60,50)
.color-object
  color hsl(120,60,60)

@-webkit-keyframes blink
  0%
    opacity 1
  49%
    opacity 1
  50%
    opacity 0
  99%
    opacity 0
.blink
  -webkit-animation blink 1.4s infinite

#term-2
  height 200px

.codes
  background hsl(300,90,20)
  padding 4px
  color white
  font-size 13px
  font-family monospace
  line-height 18px

.window
  background hsl(120,60,10)
  color white
  font-family monospace
  font-size 13px
  display -webkit-box
  -webkit-box-orient horizontal
  height 400px
  border 8px black solid
  border-radius 2px
  line-height 18px

  .left
    width 50%
    padding-top 100px
    background hsla(300,90,40,0.2)

  .right
    width 50%
    // overflow-y scroll
    // overflow-x hidden

    .card
      width 94%
      margin 10px auto
      // box-shadow 0px 0px 8px gray

      .ctrl
        padding 6px 0px
        span
          box-shadow 0px 0px 4px gray
          padding 2px 4px
          background hsl(240,40,70)
          margin-right 10px
          border-radius 4px
          cursor pointer
          text-shadow 0px 0px 5px gray

      textarea
        width 98%
        height 100px
        background hsla(240,80,94,1)
        border-radius 4px
        color black
        border none

      img
        width 98%

#window-2
  overflow-y scroll

.dialog
  background hsl(240,40,30)
  padding 8px

.shot
  width 100%